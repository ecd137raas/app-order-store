<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Controle de Pedidos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>

<body style="background-color: #373b3e;">
    <div class="row">
            <div class="col-sm-6 mb-3 mb-sm-0">
                <div class="card text-bg-dark">
                    <div class="card-header" style="font-size: larger; text-align: center; font-weight: bold">Preparando</div>
                    <div class="card-body" style="height: 45rem;">
                        <% res.forEach(function(res) { %>
                            <% if(res.status == 'Preparando') { %>
                                <p class="card-text" style="font-size:  xxx-large;"><%=res.order %></p>
                            <%}%>
                        <% }); %> 
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                
                <div class="card text-bg-success">
                    <div class="card-header" style="font-size: larger; text-align: center; font-weight: bold;">Pronto</div>
                    <div class="card-body" style="height: 45rem;">
                        <% res.forEach(function(res) { %>
                            <% if(res.status == 'Pronto'){%>
                                <p class="card-text" style="font-size:  xxx-large;"><%=res.order %></p>
                            <%}%>
                        <% }); %> 
                    </div>
                </div>
                
            </div>
    </div>
    <script>
        // Define o tempo em milissegundos antes do recarregamento automático
        const tempoRecarregamento = 5000; // 5 segundos
        // Define a função para recarregar a página
        function recarregarPagina() {
          location.reload();
        }
        // Agende o recarregamento após o tempo especificado
        setTimeout(recarregarPagina, tempoRecarregamento);
      </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous">
    </script>
</body>

</html>